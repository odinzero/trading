<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/util  http://www.springframework.org/schema/util/spring-util-3.1.xsd">

    <!--
        JMenuBar menuBar = new JMenuBar();
        menu_bar.add(view);
        menu_bar.add(edit);
        menu_bar.add(help);
    -->
 
    <import resource="menu_view.xml"></import>
    <import resource="menu_edit.xml"></import>
    <import resource="menu_help.xml"></import>
    
    <!-- JMenuBar menu_bar = new JMenuBar(); -->
    <bean id="menu_bar" class="com.trade.ui.elements.menuBar" init-method="init">
        <property name="menuBarComponents" >
            <list>
                <ref bean="view"/>
                <ref bean="edit"/>
                <ref bean="help"/>
            </list>
        </property>
    </bean>
    
</beans>    
